extend ../../layouts/default.pug
include ../../mixin/filter-status.pug
 
block main
    h1 Products List  
    .card-header FilterAndSearch
    .card-body
        .row 
            .col-6
                +filter-status(filterStatus) 
            .col-6 
                form(id="form-search")
                    .input-group
                        input(
                            type="text"
                            placeholder="Enter keyword"
                            name="keyword"
                            class="form-control"
                            value = keyword 
                        )
                        .input-group-append
                            button(
                                class="btn btn-success"
                                type="submit"
                            ) Find

    .card-header Products List 
        .card-body 
            table.table.table-hover.table-sm 
                thead 
                    th STT 
                    th Image 
                    th Title
                    th Price
                    th Status
                    th Action
                
                tbody 
                    each item, index in products
                        tr 
                            td #{index + 1}
                            td 
                                img(
                                    src=item.thumbnail
                                    alt=item.title 
                                    width="100px"
                                    height="auto"
                                )
                            td #{item.title}
                            td #{item.price}
                            td 
                                if(item.status == "active")
                                    a(href="#" class="badge text-bg-success") Active 
                                else 
                                    a(href="#" class="badge text-bg-danger") No Active 
                            td  
                                button(class="btn btn-warning btn-sm") Edit
                                button(class="btn btn-danger btn-sm ml-1") Delete
