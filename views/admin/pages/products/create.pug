extends ../../layouts/default.pug
include ../../mixin/alert.pug
include ../../mixin/select-tree.pug
block main
    if (role.decentralization.includes ("product_create"))
        +alert-error(5000)
        h1(class="mb-4") Add New Product 

        form(
            action=`${prefixAdmin}/products/create`
            id="form-create-product"
            method="POST"
            enctype="multipart/form-data"
        )
            div(class="form-group")
                label(for="title") Title 
                input(
                    type="text"
                    class="form-control"
                    id="title"
                    name="title" 
                )
            div(class="form-group")
                label(for="product_category_id") Category Parent 
                select(
                    name="product_category_id", 
                    id="product_category_id",
                    class="form-control"
                )
                    option(value="") --- Select Category --- 
                    if (category) 
                        +select-tree(category)
            div(class="form-group")
                label(for="desc") Description 
                textarea(
                    type="text"
                    class="form-control textarea-mce"
                    id="desc"
                    name="description"
                    row="5"
                )   
            div(class="form-group")
                label(for="price") Price 
                input(
                    type="text"
                    class="form-control"
                    id="price"
                    name="price"
                    min="0"
                )
            div(class="form-group")
                label(for="discount") Discount 
                input(
                    type="text"
                    class="form-control"
                    id="discount"
                    name="discountPercentage"
                    value="0"
                    min="0"
                )
            div(class="form-group")
                label(for="stock") Number
                input(
                    type="number"
                    class="form-control"
                    id="stock"
                    name="stock"
                    value="0"
                    min="0"
                )
            div(
                class="form-group"
                upload-image
            )
                label(for="thumbnail") Photo
                input(
                    type="file"
                    class="form-control-file"
                    id="thumbnail"
                    name="thumbnail"
                    accept="image/*"
                    upload-image-input
                )
                img(
                    src=""
                    upload-image-preview
                    class="image-preview"
                )
                button(
                    type="button"
                    class="btn btn-danger"
                    cancel-image-preview
                ) X 
            div(class="form-group")
                label(for="position") Position 
                input(
                    type="number"
                    class="form-control"
                    id="position"
                    name="position"
                    placeholder="Auto increase"
                    min="1"
                )
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusActive"
                    name="status"
                    value="active"
                    checked
                )
                label(for="statusActive" class="form-check-label") Active
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusInActive"
                    name="status"
                    value="inactive"
                )
                label(for="statusInActive" class="form-check-label") Inactive
            div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Add new

        script(scr="admin/js/product.js")