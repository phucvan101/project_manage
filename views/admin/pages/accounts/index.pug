extend ../../layouts/default.pug 
include ../../mixin/moment.pug

block main
    if (role.decentralization.includes ("accounts_view")) 
        h1(class="mab-4") List of account
        .card.mb-3 
            .card-header Account
            .card-body 
                .row 
                    .col-8 
                    .col-4.text-right
                        if (role.decentralization.includes ("accounts_create")) 
                            a(
                                href=`${prefixAdmin}/accounts/create`
                                class="btn btn-outline-success"
                            ) + Add new 
                table(
                    class="table table-hover table-sm"
                ) 
                    thead 
                        tr 
                            th STT 
                            th Avatar 
                            th Full Name 
                            th Decentralization 
                            th Email 
                            th Status 
                            th Creator
                            th Activity 

                    tbody 
                        each item, index in records 
                            tr 
                                td #{index + 1} 
                                td 
                                    img(
                                        src=item.avatar
                                        alt=item.fullName
                                        width="100px"
                                        height="auto"
                                    )
                                td #{item.fullName}
                                td #{item.role.title} 
                                td #{item.email} 
                                td 
                                    if (item.status=="active")
                                        span(
                                            class="badge text-bg-success"
                                            data-status="active"
                                        ) Active 
                                    else 
                                        span(
                                            class="badge text-bg-danger"
                                            data-status="inactive"
                                        ) Inactive
                                td 
                                    p #{item.accountFullName}
                                    p 
                                        +formatDateTime(item.createdBy.createdAt)

                                td 
                                    a(
                                        class="btn btn-secondary btn-sm"
                                        href=`${prefixAdmin}/accounts/detail/${item.id}`
                                    ) Detail
                                    if (role.decentralization.includes ("accounts_edit")) 
                                        a(
                                            class="btn btn-warning btn-sm ml-1"
                                            href=`${prefixAdmin}/accounts/edit/${item.id}`
                                        ) Edit
                                    if (role.decentralization.includes ("accounts_delete")) 
                                        button(
                                            class="btn btn-danger btn-sm ml-1"
                                            button-delete 
                                            data-id = item.id
                                        ) Delete

        form(
            action ="",
            method = "POST",
            id="form-delete-item", 
            data-path=`${prefixAdmin}/accounts/delete`
        )

        script(src="/admin/js/product.js") 