extends  ../../layout/default.pug 
include ../../mixins/alert.pug 

block main 
    +alert-error(5000)

    .container.my-5 
        .row.justify-content-center 
            .col-8 
                h1.text-center Login Account 
                form(
                    action=`/user/login`
                    method="POST"
                )
                    div.form-group
                        label(for="email") Email 
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            required
                        )
                    div.form-group
                        label(for="password") Password 
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                            required
                        )
                    div.form-group
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                        ) Login
